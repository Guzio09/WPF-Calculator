<Window x:Class="Calculator.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Help" Height="200" Width="300">

    <Border Padding="10">
        <StackPanel>
            <Label x:Name="author"></Label>
            <Label x:Name="licence"></Label>
            <Button x:Name="close_button" Width="70" VerticalAlignment="Bottom" Content="Close" Click="close_button_Click" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Border>
</Window>
